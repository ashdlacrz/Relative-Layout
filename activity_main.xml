<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/first"
        android:text="button 1"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/second"
        android:text="button 2"
        android:layout_alignParentEnd="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/third"
        android:text="button 3"
        android:layout_below="@+id/first"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fourth"
        android:text="button 4"
        android:layout_below="@id/first"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fifth"
        android:text="button 5"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/second"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sixth"
        android:text="button 6"
        android:layout_below="@+id/third"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seventh"
        android:text="button 7"
        android:layout_below="@+id/sixth"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seventh"
        android:text="button 8" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ninth"
        android:text="button 9"
        android:layout_below="@id/seventh"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/tenth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/eight"
        android:text="button 10" />
    <Button
        android:id="@+id/eleventh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ninth"
        android:text="button 11"/>
    <Button
        android:id="@+id/twelfth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/eleventh"
        android:text="button 12"/>

    <Button
        android:id="@+id/thirteenth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/twelfth"
        android:text="button 13" />
    <Button
        android:id="@+id/fourteenth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/thirteenth"
        android:text="button 14"/>
    <Button
        android:id="@+id/fifteen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/fourteenth"
        android:text="button 15"/>

</RelativeLayout>